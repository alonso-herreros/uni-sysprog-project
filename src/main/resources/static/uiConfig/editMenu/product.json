                    "type": "string",
                    "minLength": 1,
                    "maxLength": 20
                }
            }]
        },
        "category": {
            "title": "Category",
            "subFields": [{
                "content": [{
                    "type": "attribute",
                    "attributePath": ["category"]
                }],
                "set": "simpleAttribute",
                "validation": {
                    "type": "string",
                    "minLength": 1,
                    "maxLength": 1
                }
            }]
        },
        "isCountable": {
