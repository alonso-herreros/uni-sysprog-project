{
    "elementID": "id",
    "elementClass": "Person",
    "setFormat": [
        "id",
        "firstName",
        "lastName",
        "email"
    ],
    "fields": {
        "id": {
            "title": "ID",
            "subFields": [{
                "class": "id",
                "content":[{
                    "type": "attribute",
                    "attributePath": ["id"],
                    "format": {
                        "type": "int",
                        "digits": 8,
                        "align": "right",
                        "pad": "0"
                    }
                }],
                "set": "simpleAttribute",
                "validation": {
                    "type": "int",
                    "min": 0,
                    "max": 99999999
                }
            }]
        },
        "firstName": {
            "title": "First Name",
            "subFields": [{
                "content": [{
                    "type": "attribute",
                    "attributePath": ["firstName"]
                }],
                "set": "simpleAttribute",
                "validation": {
                    "type": "string",
                    "minLength": 1,
                    "maxLength": 20
                }
            }]
        },
        "lastName": {
            "title": "Last Name",
            "subFields": [{
                "content": [{
                    "type": "attribute",
                    "attributePath": ["lastName"]
                }],
                "set": "simpleAttribute",
                "validation": {
                    "type": "string",
                    "minLength": 1,
                    "maxLength": 25
                }
            }]
        },
        "email": {
            "title": "E-Mail",
            "subFields": [{
                "content": [{
                    "type": "attribute",
                    "attributePath": ["email"]
                }],
                "set": "simpleAttribute",
                "validation": {
                    "type": "regex",
                    "pattern": "^\\w[\\w-\\.]*@([\\w-]+\\.)+[\\w-]{2,4}$"
                }
            }]
        }
    }
}